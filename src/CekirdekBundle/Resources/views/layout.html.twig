{% endblock %}

{% block sidebar %}
    <div class="container-fluid text-center" style="margin-top: 50px;">
        <div class="row content">
            <div class="col-lg-offset-2 col-lg-8">
                <section>
                    {% block section %}{% endblock %}
                </section>
            </div>
            <div class="col-lg-2"></div>
        </div>
    </div>

    <footer>
        <p>{{ 'now' | date('Y') }} Blog</p>
    </footer>
{% endblock %}
