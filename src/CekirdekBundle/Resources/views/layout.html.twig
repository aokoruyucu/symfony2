{% endblock %}

{% block body %}
    <nav class="navbar navbar-fixed-top">
        <div id="header-container" class="container navbar-container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a id="brand" class="navbar-brand" href="{{ path('cekirdek_homepage') }}">BLOG</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse" style="float: right">
                <ul>
                    <li class="active"><a href="{{ path('cekirdek_homepage') }}">Home</a></li>
                    <li class="active"><a href="">User Login</a></li>
                    <li class="active"><a href="{{ path('admin_security_login') }}">Admin Login</a></li>
                    <li class="active"><a href="#">New Account</a></li>
            </div><!-- /.nav-collapse -->
        </div><!-- /.container -->
