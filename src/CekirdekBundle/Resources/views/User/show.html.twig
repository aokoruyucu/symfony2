{% extends "CekirdekBundle::layout.html.twig" %}

{% block title %}{{ 'post.by.author' | trans({ '%name%': user.name }) }}{% endblock %}

{% block sidebar %}
<div class="container" style="margin-top: 50px;">

        <div class="col-lg-6">
            <div class="row">
                <aside>
                    <h3>Created By</h3>

                    <p>
                        <a href="{{ path('cekirdek_user_show', { slug: user.slug }) }}" title="{{ 'post.by.author' | trans({ '%name%': user.name,'%surname%': user.surname}) }}">
                            {{ user.name }} {{ user.surname }}
                        </a>
                    </p>
                </aside>
            </div>
            <div class="row">
            {% for post in posts %}
                {{ include('CekirdekBundle:Post:_post.html.twig', { post: post }) }}
            {% else %}
                <p>{{ 'user.empty.post' | trans }}</p>
            {% endfor %}
            </div>
        </div>
        <div class="col-lg-6 text-center">
                <img src="https://s.yimg.com/ny/api/res/1.2/MWq.f0GLMCl6NxF6y.6XZQ--/YXBwaWQ9aGlnaGxhbmRlcjtzbT0xO3c9ODAw/https://media.giphy.com/media/DlItrKrtLcSmA/giphy.gif">
        </div>

</div>

{% endblock %}



