{% extends 'AdminBundle::layout.html.twig' %}

{% block title %}{{ user.name }}{% endblock %}

{% block body %}
    <h1>{{ user.name }}</h1>

    <table>
        <tbody>
        <tr>
            <th>Created at</th>
            <td>{{ user.createdAt | date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Updated at</th>
            <td>{{ user.updatedAt | date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ user.name }}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_user_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_user_edit', { 'slug': user.slug }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}