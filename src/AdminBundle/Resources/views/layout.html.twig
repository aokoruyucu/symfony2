{% extends "::base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/admin/css/main.css') }}">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">


{% endblock %}

{% block body %}
    <header>
        <p>Symfony 2 Blog - Admin</p>
        <nav>
            <ul>
                <li><a href="{{ path('admin_post_index') }}">Posts</a></li>
                <li><a href="{{ path('admin_user_index') }}">Users</a></li>
                {% if app.user %}
                    <li><a href="{{ path('admin_security_logout') }}">Logout</a></li>
                {% endif %}
            </ul>
        </nav>
    </header>

    <section>
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <p class="session-message">{{ message }}</p>
            {% endfor %}
        {% endfor %}

        {% block section %}{% endblock %}
    </section>
{% endblock %}
