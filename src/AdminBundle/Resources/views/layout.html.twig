{% extends "::base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/admin/css/main.css') }}">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">


{% endblock %}

{% block body %}
    <header>
    <nav class="navbar navbar-fixed-top">
        <div id="header-container" class="container navbar-container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a id="brand" class="navbar-brand" href="{{ path('cekirdek_homepage') }}">Blog - Admin</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse" style="float: right">
                <ul>
                    <li class="active"><a href="{{ path('admin_post_index') }}">Posts</a></li>
                    <li><a href="{{ path('admin_user_index') }}">Users</a></li>
                    {% if app.user %}
                        <li><a href="{{ path('admin_security_logout') }}">Logout</a></li>
                    {% endif %}
            </div><!-- /.nav-collapse -->
        </div><!-- /.container -->
    </nav>
    </header>


    <div class="container-fluid">
        <div class="col-lg-offset-3 col-lg-6">
            <div class="row">
                {% for type, messages in app.session.flashbag.all() %}
                    {% for message in messages %}
                        <p class="session-message">{{ message }}</p>
                    {% endfor %}
                {% endfor %}

                {% block section %}{% endblock %}
            </div>
        </div>

    </div>
{% endblock %}
